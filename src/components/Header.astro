---
interface HeaderProps {
    siteTitle: string;
    pages: Array<{ url: string; title: string }>;
    currentUrl: string;
    iconURL: string;
}

const { siteTitle, pages, currentUrl, iconURL } = Astro.props as HeaderProps;
---

<header class="site-header">
    <a class="site-title" rel="author" href="/">{siteTitle}</a>

    <nav class="site-nav">
        <input type="checkbox" id="nav-trigger" class="nav-trigger" />
        <label for="nav-trigger">
            <span class="menu-icon">
                <svg viewBox="0 0 18 15" width="18px" height="15">
                    <path d="M18,1.484c0,0.82-0.665,1.484-1.484,1.484H1.484C0.665,2.969,0,2.304,0,1.484s0.665-1.484,1.484-1.484h15.032C17.335,0,18,0.665,18,1.484z M18,7.516c0,0.819-0.665,1.484-1.484,1.484H1.484C0.665,9,0,8.335,0,7.516s0.665-1.484,1.484-1.484h15.032C17.335,6.031,18,6.696,18,7.516z M18,13.516c0,0.819-0.665,1.484-1.484,1.484H1.484C0.665,15,0,14.335,0,13.516s0.665-1.484,1.484-1.484h15.032C17.335,12.031,18,12.695,18,13.516z"/>
                </svg>
            </span>
        </label>
        <div class="trigger">
            {pages.map(page => (
                page.title && (
                    <a class={`page-link post-link${page.url === currentUrl ? ' active' : ''}`}
                       href={page.url}
                    >
                        {page.title}
                    </a>
                )
            ))}
        </div>
    </nav>

    <div class="site-icon">
        <img src={iconURL} alt="Site Icon" />
    </div>
</header>
